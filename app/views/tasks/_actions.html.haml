= link_to "edit", edit_task_path(task), class: "btn btn-sm btn-success", data: { turbolinks: false }
- if task.backlog?
  = link_to "mark inprogress", mark_inprogress_task_path(task), method: :patch, class: "btn btn-sm btn-success", data: { confirm: 'Are you sure you want to mark this task inprogress?' }
  = link_to "mark done", mark_done_task_path(task), method: :patch, class: "btn btn-sm btn-success", data: { confirm: 'Are you sure you want to mark this task done?' }
- if task.inprogress?
  = link_to "mark done", mark_done_task_path(task), method: :patch, class: "btn btn-sm btn-success", data: { confirm: 'Are you sure you want to mark this task done?' }